{
  "openapi": "3.0.1",
  "info": {
    "title": "smart Recipe Generator",
    "version": "1.0"
  },
  "paths": {
    "/api/Recipe/generate": {
      "post": {
        "tags": [
          "Recipe"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecipeRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RecipeRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RecipeRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/RecipeDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecipeDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecipeDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NutritionInfo": {
        "type": "object",
        "properties": {
          "caloriesTotal": {
            "type": "string",
            "nullable": true
          },
          "caloriesPerServing": {
            "type": "string",
            "nullable": true
          },
          "proteinPerServing": {
            "type": "string",
            "nullable": true
          },
          "carbsPerServing": {
            "type": "string",
            "nullable": true
          },
          "fatPerServing": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RecipeDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "nutrition": {
            "$ref": "#/components/schemas/NutritionInfo"
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RecipeRequestDto": {
        "required": [
          "ingredients"
        ],
        "type": "object",
        "properties": {
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "vegetarian": {
            "type": "boolean"
          },
          "vegan": {
            "type": "boolean"
          },
          "glutenFree": {
            "type": "boolean"
          },
          "maxCalories": {
            "maximum": 5000,
            "minimum": 50,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "servings": {
            "maximum": 20,
            "minimum": 1,
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}